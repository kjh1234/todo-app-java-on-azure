pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout([
                              $class: 'GitSCM', 
                              userRemoteConfigs: [[url: GIT_REPOSITORY_URL, credentialsId: GIT_CREDENTIALS_ID ]], 
                              branches: [[name: GIT_BRANCH]]
                            ])
        }
      }

      stage('Build') {
        steps {
          sh 'mvn -Dmaven.test.failure.ignore=true clean install package'
        }
      }

      stage('Deploy') {
        steps {
          echo 'test'
          sh '''#ftp -n -v ${DEPLOY_ADDRESS} << EOF
#user ${DEPLOY_FTP_ID} ${DEPLOY_FTP_PW}
#cd /data/was
#bin
#lcd ${workspace}/target
#put deploy.jar deploy.jar
#EOF'''
        }
      }

    }
    environment {
      GIT_REPOSITORY_URL = 'https://github.com/kjh1234/todo-app-java-on-azure.git'
      GIT_CREDENTIALS_ID = '	GIT_CREDENTIALS_ID'
      GIT_BRANCH = '*/master'
      
      DEPLOY_ADDRESS = 'localhost'
    }
    parameters {
      string(name: 'TAG_VERSION', defaultValue: '', description: '')
    }
  }
